#navcontainer ul
  margin: 0;
  padding: 0;
  list-style-type: none;

#navcontainer ul li
  display: inline;

#navcontainer ul li h1
  display: inline;

#navcontainer ul li h2
  display: inline;

#navcontainer ul li h3
  display: inline;

