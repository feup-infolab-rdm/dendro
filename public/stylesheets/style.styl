.change_log_table
  max-width: 100%;
  margin-left:auto;
  margin-right:auto;

.metadata-markdown-box
  margin-left :100px;
  width :80%;

.btn-file
  position: relative;
  overflow: hidden;

.btn-file input[type=file]
  position: absolute;
  top: 0;
  right: 0;
  min-width: 100%;
  min-height: 100%;
  font-size: 999px;
  text-align: right;
  opacity: 0;
  outline: none;
  background: white;
  cursor: inherit;
  display: block;

.control-value-read-only
  padding 0.5em 1em
  border-left: 1px solid #ccc

#carousel-tutorial
  margin-top 2em
  
#carousel-tutorial *
  color black

#directory_tree{
  .progress{
    margin: -15px;
    margin-top: 15px;
    position: relative;
    bottom: 0;
    border-radius: 0;
    height: 5px;
  }
}

.autocomplete-width {
  width: 100%;
  top: 3px;
  bottom: 3px;
  word-wrap:break-word;
  /**word-break: break-all; **/
  white-space: normal; /**** <<<< ----------------VERY IMPORTANT CSS3 PROPERTY **/
}

