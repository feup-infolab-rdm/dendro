    <%- include ../layout/header.ejs %>

    <style type="text/css">
    #loginError
    {
    color: #dd2929;
    text-align: right;
    padding-right: 3px;

    }
    </style>

    <h1 class="page-header">
        Register new user
    </h1>

    <form action="/register" method="POST">
        <div class="row">
            <div class="well span6 offset3">
                <div class="row">
                    <div class="form-group">
                        <label for="username" class="col-sm-2 control-label">Username</label>
                        <div class="col-sm-10">
                            <input type="text"
                                   class="form-control"
                                   id="username"
                                   placeholder="Username"
                                    <%if(locals.Config.debug.views.prefill_text_boxes){%>
                                        value="jrocha"
                                    <%}%>
                                   name="username">
                            <p class="help-block">Your username</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email" class="col-sm-2 control-label">Email</label>
                        <div class="col-sm-10">
                            <input type="text"
                                   class="form-control"
                                   id="email"
                                   placeholder="Email"
                                    <%if(locals.Config.debug.views.prefill_text_boxes){%>
                                        value="joaorosilva@gmail.com"
                                    <%}%>
                                   name="email">
                            <p class="help-block">Your email address</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="col-sm-2 control-label">Password</label>
                        <div class="col-sm-10">
                            <input type="password"
                                   class="form-control"
                                   id="password"
                                   placeholder="Password"
                                    <%if(locals.Config.debug.views.prefill_text_boxes){%>
                                        value="jrocha"
                                    <%}%>
                                   name="password">
                            <p class="help-block">Your intended password</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="repeat_password" class="col-sm-2 control-label">Repeat Password</label>
                        <div class="col-sm-10">
                            <input type="password"
                                   class="form-control"
                                   id="repeat_password"
                                   placeholder="Repeat Password"
                                    <%if(locals.Config.debug.views.prefill_text_boxes){%>
                                        value="jrocha"
                                    <%}%>
                                   name="repeat_password">
                            <p class="help-block">Repeat your intended password</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="firstname" class="col-sm-2 control-label">First Name</label>
                        <div class="col-sm-10">
                            <input type="text"
                                   class="form-control"
                                   id="firstname"
                                   placeholder="Username"
                                    <%if(locals.Config.debug.views.prefill_text_boxes){%>
                                        value="Jo√£o"
                                    <%}%>
                                   name="firstname">
                            <p class="help-block">Your first name</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="surname" class="col-sm-2 control-label">Surname</label>
                        <div class="col-sm-10">
                            <input type="text"
                                   class="form-control"
                                   id="surname"
                                   placeholder="Surname"
                                    <%if(locals.Config.debug.views.prefill_text_boxes){%>
                                        value="Rocha"
                                    <%}%>
                                   name="surname">
                            <p class="help-block">Your surname</p>
                        </div>
                    </div>
                </div>
            </div>

            <button class="btn btn-primary">Register</button>
            
        </div>
    </form>


<%- include ../layout/footer.ejs %>
